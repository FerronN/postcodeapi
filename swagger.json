      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "example": "Feature"
        },
        "geometry": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "example": "Polygon"
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "example": [
                  [
                    100,
                    0
                  ],
                  [
                    101,
                    0
                  ],
                  [
                    101,
                    1
                  ],
                  [
                    100,
                    1
                  ],
                  [
                    100,
                    0
                  ]
                ]
              }
            }
          }
        }
