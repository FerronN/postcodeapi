    "/postcodes/{postcode}": {
      "get": {
        "summary": "Enkele postcode",
        "parameters": [
          {
            "name": "postcode",
            "description": "Postcode in P4 (6545), P5 (6545C) of P6 (6545CA) formaat",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "description": "Informatie over één postcodegebied",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "town": {
                  "type": "string",
                  "example": "Nijmegen"
                },
                "municipality": {
                  "type": "string",
                  "example": "Nijmegen"
                },
                "province": {
                  "type": "string",
                  "example": "Gelderland"
                },
                "addresses": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string",
                        "example": "Binderskampweg"
                      },
                      "housenumber": {
                        "type": "string",
                        "example": 29
                      },
                      "addition": {
                        "type": "string",
                        "example": "U31"
                      },
                      "_links": {
                        "type": "object",
                        "properties": {
                          "self": {
                            "type": "object",
                            "properties": {
                              "href": {
                                "type": "string",
