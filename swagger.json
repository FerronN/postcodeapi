                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string",
                        "example": "Binderskampweg",
                        "description": "Straat"
                      },
                      "number": {
                        "type": "integer",
                        "example": 29,
                        "description": "Huisnummer"
                      },
                      "letter": {
                        "type": "string",
                        "example": "U",
                        "description": "Letter"
                      },
                      "addition": {
                        "type": "string",
                        "example": "31",
                        "description": "Huisnummer toevoeging"
                      },
                      "postcode": {
                        "type": "string",
                        "example": "6545CA",
                        "description": "Postcode in *P6* formaat"
                      },
                      "city": {
                        "$ref": "#/definitions/City"
                      },
                      "municipality": {
                        "$ref": "#/definitions/Municipality"
                      },
                      "province": {
                        "$ref": "#/definitions/Province"
