{
  "swagger": "2.0",
  "info": {
    "version": "2.0",
    "title": "PostcodeAPI"
  },
  "host": "vagrant:3000",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/postcodes": {
      "get": {
        "description": "Alle postcodes in Nederland, gepagineerd per 100 records",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "type": "integer",
            "required": false,
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "_embedded": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "p6": {
                        "type": "string",
                        "example": "6545CA"
                      },
                      "_links": {
                        "type": "object",
                        "properties": {
                          "self": {
                            "type": "object",
                            "properties": {
                              "href": {
                                "type": "string",
                                "example": "/postcodes/6545CA"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "_links": {
                  "type": "object",
                  "properties": {
                    "next": {
                      "type": "object",
                      "properties": {
                        "href": {
                          "type": "string",
                          "example": "/postcodes?page=2"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/postcodes/{postcode}": {
      "get": {
        "parameters": [
          {
            "name": "postcode",
            "description": "Postcode in P4 (6545), P5 (6545C) of P6 (6545CA) formaat",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "description": "Informatie over één postcodegebied",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "town": {
                  "type": "string",
                  "example": "Nijmegen"
                },
                "municipality": {
                  "type": "string",
                  "example": "Nijmegen"
                },
                "province": {
                  "type": "string",
                  "example": "Gelderland"
                },
                "addresses": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string",
                        "example": "Binderskampweg"
                      },
                      "housenumber": {
                        "type": "string",
                        "example": 29
                      },
                      "addition": {
                        "type": "string",
                        "example": "U31"
                      },
                      "_links": {
                        "type": "object",
                        "properties": {
                          "self": {
                            "type": "object",
                            "properties": {
                              "href": {
                                "type": "string",
                                "example": "/6545CA/29/U31"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                },
                "_links": {
                  "type": "object",
                  "properties": {
                    "town": {
                      "type": "object",
                      "properties": {
                        "href": {
                          "type": "object",
                          "example": "/towns/1"
                        }
                      }
                    },
                    "municipality": {
                      "type": "object",
                      "properties": {
                        "href": {
                          "type": "object",
                          "example": "/municipalities/1"
                        }
                      }
                    },
                    "province": {
                      "type": "object",
                      "properties": {
                        "href": {
                          "type": "object",
                          "example": "/provinces/1"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}